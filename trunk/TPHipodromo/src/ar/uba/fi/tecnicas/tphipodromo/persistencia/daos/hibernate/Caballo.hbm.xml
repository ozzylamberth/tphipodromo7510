<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping >
	<class name="ar.uba.fi.tecnicas.tphipodromo.modelo.Caballo" table="Caballo">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="native" />         
		</id>  
		
		<property name="caballeriza" type="java.lang.String"  />
		<property name="criador" type="java.lang.String" />
		<property name="edad" type="java.lang.Integer"  />
		<property name="nombre" type="java.lang.String" />
		<property name="pelaje" type="java.lang.String"  />
		<property name="peso" type="float" />
		<property name="puraSangre" type="boolean"  />
	</class>
</hibernate-mapping>